<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="134dp"
        android:layout_height="87dp"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_list" />


    <ImageView
        android:id="@+id/imageView01"
        android:layout_width="147dp"
        android:layout_height="128dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="196dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/espresso" />
    <TextView
        android:id="@+id/textView01"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"
        android:text="Espresso\n 6 BYN"
        app:layout_constraintStart_toStartOf="@+id/imageView01"
        app:layout_constraintTop_toBottomOf="@+id/imageView01" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/espresso_btn"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/brown_btn"
        android:gravity="center"
        android:text="Buy"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView01"
        app:layout_constraintTop_toBottomOf="@+id/textView01" />

    <ImageView
        android:id="@+id/imageView02"
        android:layout_width="147dp"
        android:layout_height="128dp"
        android:layout_marginTop="196dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toEndOf="@+id/imageView01"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cappuccino" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:text="Cappuccino\n 7 BYN"
        app:layout_constraintStart_toStartOf="@+id/imageView02"
        app:layout_constraintTop_toBottomOf="@+id/imageView02" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cappucino_btn"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/brown_btn"
        android:gravity="center"
        android:text="Buy"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView02"
        app:layout_constraintTop_toBottomOf="@+id/textView02" />

    <ImageView
        android:id="@+id/imageView03"
        android:layout_width="147dp"
        android:layout_height="128dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="464dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/latte" />

    <TextView
        android:id="@+id/textView03"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:text="Latte \n 7 BYN"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/imageView03"
        app:layout_constraintTop_toBottomOf="@+id/imageView03" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/latte_btn"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/brown_btn"
        android:gravity="center"
        android:text="Buy"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView03"
        app:layout_constraintTop_toBottomOf="@+id/textView03" />

    <ImageView
        android:id="@+id/imageView04"
        android:layout_width="147dp"
        android:layout_height="128dp"
        android:layout_marginTop="464dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toEndOf="@+id/imageView03"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tea" />
    <TextView
        android:id="@+id/textView04"
        android:layout_width="140dp"
        android:textColor="@color/black"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:text="Tea \n 5BYN"
        app:layout_constraintStart_toStartOf="@+id/imageView04"
        app:layout_constraintTop_toBottomOf="@+id/imageView04" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tea_btn"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/brown_btn"
        android:gravity="center"
        android:text="Buy"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView04"
        app:layout_constraintTop_toBottomOf="@+id/textView04" />




</androidx.constraintlayout.widget.ConstraintLayout>